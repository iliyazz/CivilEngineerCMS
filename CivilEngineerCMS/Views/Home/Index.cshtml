@using CivilEngineerCMS.Services.Data.Interfaces
@using CivilEngineerCMS.Web.Infrastructure.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<IndexViewModel>
@inject IEmployeeService EmployeeService
@{
    ViewData["Title"] = "Home Page";
    var projects = Model.ToList();
    string userId = User.GetId();
    bool isEmployee = await EmployeeService.IsEmployeeAsync(userId);
    bool isAdministrator = User.IsAdministrator();
}
@if (!isAdministrator)
{
    @if (projects.Any())
    {
        <div class="mt-4 p-5 bg-light">
            <h1 class="display-4">Welcome to our customer management system!</h1>
            <p class="lead">
                Here you can find all the information about your projects.
            </p>
        </div>
    }
    
        <div class="mb-5"></div>
    
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < projects.Count(); i++)
                {
                    var project = projects[i];
                    <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                        <img class="d-block w-100" style="height:500px"
                             src="@project.UrlPicturePath" alt="@project.Name">
                        @if (isEmployee)
                        {
                            <div class="carousel-caption d-none d-md-block">
                                <h5>
                                <a class="btn btn-primary" asp-area="" asp-controller="Project" asp-action="Details"
                                       asp-route-id="@project.Id">
                                        @project.Name
                                    </a>
                                </h5>
                            </div>
                        }
    
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
}

@if (isAdministrator)
{
    <H1 class="text-center">Welcome to the administration panel!</H1>
    <div class="mb-5"></div>
    <div class="row">
        <div class="col-12 text-center">
            <button class="btn btn-primary" id="statistics_btn">Show statistics</button>
        </div>
    </div>
    <div class="mt-4 p-5 bg-light d-none" id="statistics_box">
        <div class="row">
            <h2 class="col-md-4 text-center" id="total_projects"></h2>
            <h2 class="col-md-4 text-center" id="total_active_projects"></h2>
            <h2 class="col-md-4 text-center" id="total_clients"></h2>
        </div>
    </div>
}


@section Scripts {
    <script>statistics();</script>
}