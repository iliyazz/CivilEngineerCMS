@model ProjectPreDeleteViewModel
@{
    ViewBag.Title = "Delete project";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form method="post" asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="UrlPicturePath" class="control-label"></label>
                <input asp-for="UrlPicturePath" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectStartDate" class="control-label"></label>
                <input asp-for="ProjectStartDate" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectEndDate" class="control-label"></label>
                <input asp-for="ProjectEndDate" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="ManagerName" class="control-label"></label>
                <input asp-for="ManagerName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" disabled="disabled" />
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger mt-3" onclick="return confirm('Are yoy sure you want to delete project?')" />
                <a class="btn btn- btn-primary mt-3" href="javascript: history.back(); ">Cancel</a>
            </div>
        </div>
    </div>
</form>