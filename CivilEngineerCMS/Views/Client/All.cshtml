@using CivilEngineerCMS.Services.Data.Interfaces
@model IEnumerable<CivilEngineerCMS.Web.ViewModels.Client.AllClientViewModel>
@inject IClientService ClientService
@{
    ViewData["Title"] = "All clients";
    var clients = Model.ToList();
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr/>

@if (!clients.Any())
{
    <h3 class="text-center">No clients yet!</h3>
}
else
{
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Phone number</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Is deleted</th>
        </tr>
        </thead>
        <tbody>
        @{ int rowNumber = 0; }
        @foreach (var cl in clients)
        {
            rowNumber++;
            var clientCondition = string.Empty;
                clientCondition = cl.IsActive ? "Active" : "Deleted";
            <tr onclick="location.href = '@Url.Action("Details", "Client", new { id = @cl.Id.ToString() })' " type="submit" data - toggle="tooltip" data - placement="top" title="Click for details" role="button">
                <th scope="row">@rowNumber</th>
                <td>@cl.FirstName</td>
                <td>@cl.LastName</td>
                <td>@cl.PhoneNumber</td>
                <td>@cl.Email</td>
                <td>@cl.Address</td>
                <td>@clientCondition</td>
            </tr>
        }
        </tbody>
    </table>
}